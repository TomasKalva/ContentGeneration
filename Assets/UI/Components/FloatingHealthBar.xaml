<UserControl x:Class="ContentGeneration.Assets.UI.Components.FloatingHealthBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:util="clr-namespace:ContentGeneration.Assets.UI.Util"
             xmlns:comp="clr-namespace:ContentGeneration.Assets.UI.Components"
             xmlns:m="clr-namespace:ContentGeneration.Assets.UI.Model"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="180"
             x:Name="parent"
             d:DataContext="{d:DesignInstance m:CharacterState}">
    <UserControl.Style>
        <Style TargetType="{x:Type UserControl}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding VisibleOnCamera}" Value="False">
                    <Setter Property="Visibility" Value="Hidden"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <StackPanel>
        <comp:ProgressBarNum DataContext="{Binding Health}" Color="Red"/>
        <comp:ProgressBarNum DataContext="{Binding Will}" Color="Green"/>
        <comp:ProgressBarNum DataContext="{Binding Posture}" Color="Yellow"/>
    </StackPanel>
</UserControl>
